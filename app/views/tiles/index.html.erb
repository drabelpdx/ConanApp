              <tr>
                <td class="tile"><%= link_to tile.name, tile_path(tile) %></td>
                <td><%= tile.count %></td>
                <td><% if tile.move != nil %><%= tile.move %><% else %>-<% end %></td>
                <td><% if tile.armor != nil %><%= tile.armor %><% else %>-<% end %></td>
                <td class="stats"><% if tile.melee != '-' %>
                  <% tile.bones.each do |bone| %>
                    <%= image_tag "dice/#{bone.name}.png", :title => "#{bone.name}" %>
                    <% end%><% else %> --
                  <% end%></td>
                <td class="stats"><% if tile.ranged != '-' %>
                  <% tile.bones.each do |bone| %>
                    <%= image_tag "dice/#{bone.name}.png", :title => "#{bone.name}" %>
                    <% end%><% else %> --
                  <% end%>
                </td>
                <td><% if tile.cost != nil %><%= tile.cost %><% else %> - <% end %></td>
                <td class="stats"><% if tile.skills.any? %>
                  <% tile.skills.each do |skill| %>
                      <%= link_to image_tag("skills/#{skill.name}.png", :title => "#{skill.name}"), skill_path(skill) %>
                      <% end%><% else %> --
                  <% end%>
                </td>
              </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>

