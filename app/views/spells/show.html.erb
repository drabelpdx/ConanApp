<div class="row ">
  <div class="col-md-7">
    <div class="spell-well">
      <div align="center">
        <div class="prevnext prevnext_spell" >
          <span class="prev"><%= link_to("<< Previous Spell", @spell.previous) if @spell.previous %></span>
          <span aligh="center"><%= link_to "Back to spells", spells_path %></span>
          <span class="next"><%= link_to("Next Spell >>", @spell.next) if @spell.next %></span>
        </div><br />
        <h2 class="spell"><%= @spell.name %></h2>
        from  <%= @spell.origin %>
      </div><br />
      <table class="tile_stats" align="center">
        <tr>
          <th>Cost</th>
          <th>Limit</th>
          <% if @spell.area === 'Yes' %>
            <th>Area Effect</th>
          <% end %>
          <% if @spell.instant === 'Yes' %>
            <th>Instant</th>
          <% end %>
        </tr>
        <tr>
          <td><h3><%= @spell.cost %></h3></td>
          <td><h3><%= @spell.limit %></h3></td>
          <% if @spell.area === 'Yes' %>
          <td><%= image_tag("misc/Area.png") %></td>
          <% end %>

          <% if @spell.instant === 'Yes' %>
            <td><%= image_tag("misc/Instant.png") %></td>
          <% end %>
        </tr>
      </table><br />
      <p><%= @spell.description %></p>
    </div>
  </div>
  <div class="col-md-5">
    <h4><%= @spell.name %> appears in: </h4>
    <% if @spell_scenarios.any? %>
      <% @spell_scenarios.each do |scenario| %>
        <p><%= link_to scenario.name, scenario_path(scenario) %></p>
      <% end%>
    <% end %>
  </div>
</div>

<% if logged_in? && current_user.admin? %>
  <div class="row">
    <br /><br />
    <%= link_to 'Edit', edit_spell_path(@spell) %> |
    <%= link_to 'Delete', spell_path(@spell), method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
<% end %>
