<h1>Stories</h1>
<% if logged_in? && current_user.admin? %>
  <p><%= link_to "Add a Story", new_story_path %></p>
<% end %>

<p>These are the stories by Robert E. Howard of Conan and his adventures.</P>
<div class="row">
  <div class="col-md-6 col-sm-6">
    <div class="panel panel-danger">
      <div class="panel-heading">Weird Tales Stories</div>
      <table class="table">
        <% @weird.each do |story| %>
        <tr>
          <td><%= link_to story.name, story_path(story) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="col-md-6 col-sm-6">
    <div class="panel panel-success">
      <div class="panel-heading">Other Stories</div>
      <table class="table">
        <% @other.each do |story| %>
        <tr>
          <td><%= link_to story.name, story_path(story) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
