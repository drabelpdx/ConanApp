<%= render 'shared/errors', obj: @story %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@story, html:{class: "form-horizontal", role: "form"}) do |f| %>
    <div class='form-group'>
      <div class='control-label col-sm-2'>
        <%= f.label :name %><br />
      </div>
      <div class='col-sm-8'>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class='form-group'>
      <div class='control-label col-sm-2'>
        <%= f.label :aka %><br />
      </div>
      <div class='col-sm-8'>
        <%= f.text_field :aka %>
      </div>
    </div>
    <div class='form-group'>
      <div class='control-label col-sm-2'>
        <%= f.label :origin %><br />
      </div>
      <div class='col-sm-8'>
        <%= f.text_field :origin %>
      </div>
      <div class='form-group'>
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "Back to stories", stories_path %>
