<%= render 'shared/errors', obj: @item %>

<%= form_for(@item, html:{class: "form-horizontal", role: "form"}) do |f| %>
  <div class='row'>
    <div class='col-xs-12'>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :name %><br />
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :name %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :role %><br />
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :role %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :encumbrance %><br />
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :encumbrance %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :armor %><br />
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :armor %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :melee %><br />
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :melee %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :ranged %><br />
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :ranged %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :defense %><br />
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :defense %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :manipulation %><br />
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :manipulation %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :dice %><br />
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :dice %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :origin %><br />
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :origin %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :count %><br />
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :count %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.submit :class => 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= link_to "Back to items", items_path %>
