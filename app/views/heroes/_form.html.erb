<%= render 'shared/errors', obj: @hero %>

<%= form_for @hero do |f| %>
  <div class="row">
    <h3>Stats</h3>
    <hr>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class='form-group'>
        <%= f.label :description %><br />
        <%= f.text_field :description %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :origin %><br />
        <%= f.text_area :origin %>
      </div>
      <div class='form-group'>
        <%= f.label :hero_image %><br />
        <%= f.text_area :hero_image %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :quote %><br />
        <%= f.text_area :quote, cols: "30", rows: "5" %>
      </div>
      <div class='form-group'>
        <%= f.label :cite %><br />
        <%= f.text_field :cite %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :life %><br />
        <%= f.text_field :life %>
      </div>
      <div class='form-group'>
        <%= f.label :encumbrance %><br />
        <%= f.text_field :encumbrance %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :movement_free %><br />
        <%= f.text_field :movement_free %>
      </div>
      <div class='form-group'>
        <%= f.label :movement_exertion %><br />
        <%= f.text_field :movement_exertion %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        Defence Die:<br />
        <%= f.radio_button :defense_dice, 'Red' %>
        <%= f.label :defense_dice, 'Red', :value => 'Red' %>
        <%= f.radio_button :defense_dice, 'Red-Reroll' %>
        <%= f.label :defense_dice, 'Red-Reroll', :value => 'Red-Reroll' %>
      </br>
        <%= f.radio_button :defense_dice, 'Orange' %>
        <%= f.label :defense_dice, 'Orange', :value => 'Orange' %>
        <%= f.radio_button :defense_dice, 'Orange-Reroll' %>
        <%= f.label :defense_dice, 'Orange-Reroll', :value => 'Orange-Reroll' %>
      </br>
        <%= f.radio_button :defense_dice, 'Yellow' %>
        <%= f.label :defense_dice, 'Yellow', :value => 'Yellow' %>
        <%= f.radio_button :defense_dice, 'Yellow-Reroll' %>
        <%= f.label :defense_dice, 'Yellow-Reroll', :value => 'Yellow-Reroll' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        Melee Die:<br />
        <%= f.radio_button :melee_dice, 'Red' %>
        <%= f.label :melee_dice, 'Red', :value => 'Red' %>
        <%= f.radio_button :melee_dice, 'Red-Reroll' %>
        <%= f.label :melee_dice, 'Red-Reroll', :value => 'Red-Reroll' %>
      </br>
        <%= f.radio_button :melee_dice, 'Orange' %>
        <%= f.label :melee_dice, 'Orange', :value => 'Orange' %>
        <%= f.radio_button :melee_dice, 'Orange-Reroll' %>
        <%= f.label :melee_dice, 'Orange-Reroll', :value => 'Orange-Reroll' %>
      </br>
        <%= f.radio_button :melee_dice, 'Yellow' %>
        <%= f.label :melee_dice, 'Yellow', :value => 'Yellow' %>
        <%= f.radio_button :melee_dice, 'Yellow-Reroll' %>
        <%= f.label :melee_dice, 'Yellow-Reroll', :value => 'Yellow-Reroll' %>
      </div>
      <div class='form-group'>
        <%= f.label :melee_exertion %><br />
        <%= f.text_field :melee_exertion %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        Range Die:<br />
        <%= f.radio_button :ranged_dice, 'Red' %>
        <%= f.label :ranged_dice, 'Red', :value => 'Red' %>
        <%= f.radio_button :ranged_dice, 'Red-Reroll' %>
        <%= f.label :ranged_dice, 'Red-Reroll', :value => 'Red-Reroll' %>
      </br>
        <%= f.radio_button :ranged_dice, 'Orange' %>
        <%= f.label :ranged_dice, 'Orange', :value => 'Orange' %>
        <%= f.radio_button :ranged_dice, 'Orange-Reroll' %>
        <%= f.label :ranged_dice, 'Orange-Reroll', :value => 'Orange-Reroll' %>
      </br>
        <%= f.radio_button :ranged_dice, 'Yellow' %>
        <%= f.label :ranged_dice, 'Yellow', :value => 'Yellow' %>
        <%= f.radio_button :ranged_dice, 'Yellow-Reroll' %>
        <%= f.label :ranged_dice, 'Yellow-Reroll', :value => 'Yellow-Reroll' %>
      </div>
      <div class='form-group'>
        <%= f.label :ranged_exertion %><br />
        <%= f.text_field :ranged_exertion %>
      </div>
    </div>
    <div class="col-md-4 col-sm-6">
      <div class='form-group'>
        Manipulation Die:<br />
        <%= f.radio_button :manipulation_dice, 'Red' %>
        <%= f.label :manipulation_dice, 'Red', :value => 'Red' %>
        <%= f.radio_button :manipulation_dice, 'Red-Reroll' %>
        <%= f.label :manipulation_dice, 'Red-Reroll', :value => 'Red-Reroll' %>
      </br>
        <%= f.radio_button :manipulation_dice, 'Orange' %>
        <%= f.label :manipulation_dice, 'Orange', :value => 'Orange' %>
        <%= f.radio_button :manipulation_dice, 'Orange-Reroll' %>
        <%= f.label :manipulation_dice, 'Orange-Reroll', :value => 'Orange-Reroll' %>
      </br>
        <%= f.radio_button :manipulation_dice, 'Yellow' %>
        <%= f.label :manipulation_dice, 'Yellow', :value => 'Yellow' %>
        <%= f.radio_button :manipulation_dice, 'Yellow-Reroll' %>
        <%= f.label :manipulation_dice, 'Yellow-Reroll', :value => 'Yellow-Reroll' %>
      </div>
      <div class='form-group'>
        <%= f.label :manipulation_exersion %><br />
        <%= f.text_field :manipulation_exersion %>
      </div>
    </div>
  </div>
    <br /><br />

  <div class='form-group'>
    <h3>Skills</h3>
    <hr>
    <div class="row">
      <div class="col-sm-2">Attack Skills:</div>
      <div class='col-sm-8'>
        <%= f.collection_check_boxes :skill_ids, @attack, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div><br />
    <div class="row">
      <div class="col-sm-2">Movement Skills:</div>
      <div class='col-sm-8'>
        <%= f.collection_check_boxes :skill_ids, @movement, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div><br />
    <div class="row">
      <div class="col-sm-2">Miscellaneous Skills:</div>
      <div class='col-sm-8'>
        <%= f.collection_check_boxes :skill_ids, @miscellaneous, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div><br />
    <div class="row">
      <div class="col-sm-2">Defense and Magic Skills:</div>
      <div class='col-sm-8'>
        <%= f.collection_check_boxes :skill_ids, @defense, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div>
  </div><br /><br />

  <p>
    <%= f.submit :class => 'btn btn-primary'  %>
  </p>
<% end %>
<br /><br />

<%= link_to "Back to heros", heroes_path %>
