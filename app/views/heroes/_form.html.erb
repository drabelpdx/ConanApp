<% if @hero.errors.any? %>
<h3>The following errors prevented the hero from getting created</h3>
<ul>
  <% @hero.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @hero do |f| %>
  <div class='form-group'>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class='form-group'>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class='form-group'>
    <%= f.label :quote %><br />
    <%= f.text_area :quote, cols: "50", rows: "5" %>
  </div>
  <div class='form-group'>
    <%= f.label :cite %><br />
    <%= f.text_field :cite %>
  </div>
  <div class='form-group'>
    <div class="row">
      <p>Attack Skills</p>
      <div class='col-md-10'>
        <%= f.collection_check_boxes :skill_ids, @attack, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div><br />
    <div class="row">
      <p>Movement Skills</p>
      <div class='col-md-10'>
        <%= f.collection_check_boxes :skill_ids, @movement, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div><br />
    <div class="row">
      <p>Miscellaneous Skills</p>
      <div class='col-md-10'>
        <%= f.collection_check_boxes :skill_ids, @miscellaneous, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div><br />
    <div class="row">
      <p>Defense and Magic Skills</p>
      <div class='col-md-10'>
        <%= f.collection_check_boxes :skill_ids, @defense, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div>
  </div>

  <div class='form-group'>
    <div class="row">
      <p>Weird Tales</p>
      <div class='col-sm-offset-1 col-sm-9'>
        <%= f.collection_check_boxes :story_ids, @weird, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <p>Other Stories</p>
      <div class='col-sm-offset-1 col-sm-9'>
        <%= f.collection_check_boxes :story_ids, @other, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
    </div>
  </div>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to heros", heroes_path %>
