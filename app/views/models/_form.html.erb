<%= render 'shared/errors', obj: @model %>

<%= form_for @model do |f| %>
  <div class="row">
    <h3>Stats</h3>
    <hr>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class='form-group'>
        <%= f.label :description %><br />
        <%= f.text_field :description %>
      </div>
      <div class='form-group'>
        <%= f.label :role %><br />
        <%= f.text_field :role %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :count %><br />
        <%= f.text_field :count %>
      </div>
      <div class='form-group'>
        <%= f.label :origin %><br />
        <%= f.text_field :origin %>
      </div>
      <div class='form-group'>
        <%= f.label :figure_image %><br />
        <%= f.text_field :figure_image %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class='form-group'>
      <h3>Hero Ids</h3>
      <hr>
      <div class="row">
        <div class="col-sm-2">Heroes:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :hero_ids, @heroes, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class='form-group'>
      <h3>Tile Ids</h3>
      <hr>
      <div class="row">
        <div class="col-sm-2">Leaders:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :tile_ids, @leaders_tile, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Monsters:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :tile_ids, @monsters_tile, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Minions:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :tile_ids, @minions_tile, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Heroes:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :tile_ids, @heroes_tile, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Allies:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :tile_ids, @allies_tile, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <br /><br />

  <div>
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
<br /><br />

<%= link_to "Back to tiles", tiles_path %>
