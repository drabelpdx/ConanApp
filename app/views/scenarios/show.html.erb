<div class="row">
  <div class="col-md-6">
    <div class="maps well" align="center">
      <%= image_tag "#{@scenario.map_image}" %><br /><br />
      <%= link_to "Grab the PDF here", "#{@scenario.pdf_link}", :target => "_blank" %><br />
      <%= link_to "Back to scenarios", scenarios_path %>
    </div>
  </div>
  <div class="col-md-6">
    <div>
      <h1><%= @scenario.name %></h1>
      <p><%= @scenario.description %></p><br />
    </div>
  </div>
</div>
