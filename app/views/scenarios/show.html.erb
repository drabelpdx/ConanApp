</div><br />
<div class="row">
  <div class="col-md-2">
    <h4>The River</h4>
  </div>
  <div class="s_tiles" class="col-md-10">
    <% @scenario.tile_ids.each do |id| %>
      <% @tile = Tile.find_by_id [id] %>
      <td><%= link_to image_tag("#{@tile.image}"), tile_path(id) %></td>
    <% end %>
  </div>
</div><br />
