<div class="row">
  <div class="col-md-6">
    <div class="maps well" align="center">
      <div>
        <h2><%= @scenario.name %></h2>
        <h4><%= link_to "Grab the PDF from Monolith", "#{@scenario.pdf_link}", :target => "_blank" %></h4>
        <%= image_tag "#{@scenario.map_image}" %><br /><br />
        <% @scenario.map_ids.each do |id| %>
          <% @map = Map.find_by_id [id] %>
          <h4>Use <%= link_to @map.name, map_path(@map) %> map</h4>
        <% end %>
        <%= link_to "Back to scenarios", scenarios_path %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div>
      <h3 align="center">Intro</h3>
      <p><%= @scenario.description %></p>
    </div><br />
    <div>
      <h3 align="center" >Winning the Game</h3>
      <h4>Heroes</h4>
      <%= @scenario.hero_goal %>
      <h4>Overlord</h4>
      <%= @scenario.overlord_goal %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h3 align="center" >Setup</h3>
  </div>
</div>
<div class="row">
  <div class="col-md-2">
    <h4>Heroes</h4>
  </div>
  <div class="col-md-10">
    <%= @scenario.hero_setup.html_safe %>
  </div>
</div><br />
<div class="row">
  <div class="col-md-2">
    <h4>Overlord</h4>
  </div>
