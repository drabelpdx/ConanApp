<%= render 'shared/errors', obj: @scenario %>

<%= form_for @scenario do |f| %>

  <div class="row">
    <h3>Scenario</h3>
    <hr>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :name %><br />
        <%= f.text_area :name, cols: "30", rows: "2" %>
      </div>
      <div class='form-group'>
        <%= f.label :origin %><br />
        <%= f.text_area :origin %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :map_image %><br />
        <%= f.text_area :map_image, cols: "30", rows: "2" %>
      </div>
      <div class='form-group'>
        <%= f.label :pdf_link %><br />
        <%= f.text_area :pdf_link, cols: "30", rows: "2" %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :player_count %><br />
        <%= f.text_area :player_count %>
      </div>
      <div class='form-group'>
        <%= f.label :complexity %><br />
        <%= f.text_area :complexity %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :description %><br />
        <%= f.text_area :description, cols: "80", rows: "10" %>
      </div>
    </div>
  </div>

  <div class="row">
    <h3>Heroes Setup</h3>
    <hr>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :hero_goal %><br />
        <%= f.text_area :hero_goal, cols: "40", rows: "10" %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :hero_setup %><br />
        <%= f.text_area :hero_setup, cols: "80", rows: "10" %>
      </div>
    </div>
  </div>

  <div class="row">
    <h3>Overlord Setup</h3>
    <hr>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :overlord_goal %><br />
        <%= f.text_area :overlord_goal, cols: "40", rows: "10" %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :overlord_setup %><br />
        <%= f.text_area :overlord_setup, cols: "80", rows: "10" %>
      </div>
    </div>
  </div>

  <div class="row">
    <h3>The River</h3>
    <hr>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :tile1 %><br />
        <%= f.number_field :tile1 %>
      </div>
      <div class='form-group'>
        <%= f.label :tile2 %><br />
        <%= f.number_field :tile2 %>
      </div>
      <div class='form-group'>
        <%= f.label :tile3 %><br />
        <%= f.number_field :tile3 %>
      </div>
      <div class='form-group'>
        <%= f.label :tile4 %><br />
        <%= f.number_field :tile4 %>
      </div>
      <div class='form-group'>
        <%= f.label :tile5 %><br />
        <%= f.number_field :tile5 %>
      </div>
      <div class='form-group'>
        <%= f.label :tile6 %><br />
        <%= f.number_field :tile6 %>
      </div>
      <div class='form-group'>
        <%= f.label :tile7 %><br />
        <%= f.number_field :tile7 %>
      </div>
      <div class='form-group'>
        <%= f.label :tile8 %><br />
        <%= f.number_field :tile8 %>
      </div>
    </div>

    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :life1 %><br />
        <%= f.number_field :life1 %>
      </div>
      <div class='form-group'>
        <%= f.label :life2 %><br />
        <%= f.number_field :life2 %>
      </div>
      <div class='form-group'>
        <%= f.label :life3 %><br />
        <%= f.number_field :life3 %>
      </div>
      <div class='form-group'>
        <%= f.label :life4 %><br />
        <%= f.number_field :life4 %>
      </div>
      <div class='form-group'>
        <%= f.label :life5 %><br />
        <%= f.number_field :life5 %>
      </div>
      <div class='form-group'>
        <%= f.label :life6 %><br />
        <%= f.number_field :life6 %>
      </div>
      <div class='form-group'>
        <%= f.label :life7 %><br />
        <%= f.number_field :life7 %>
      </div>
      <div class='form-group'>
        <%= f.label :life8 %><br />
        <%= f.number_field :life8 %>
      </div>
    </div>
  </div>

  <div class="row">
    <h3>Special Rules</h3>
    <hr>
    <div class="col-sm-6 col-md-8">
      <div class='form-group'>
        <%= f.label :special_rules %><br />
        <%= f.text_area :special_rules, cols: "80", rows: "10" %>
      </div>
    </div>
  </div>

  <div class="row">
    <h3>Victory</h3>
    <hr>
    <div class="col-sm-6 col-md-6">
      <div class='form-group'>
        <%= f.label :hero_victory %><br />
        <%= f.text_area :hero_victory, cols: "60", rows: "10" %>
      </div>
    </div>
    <div class="col-sm-6 col-md-6">
      <div class='form-group'>
        <%= f.label :overlord_victory %><br />
        <%= f.text_area :overlord_victory, cols: "60", rows: "10" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class='form-group'>
      <h3>Map Ids</h3>
      <hr>
      <div class="row">
        <div class="col-sm-2">Maps:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :map_ids, @maps, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class='form-group'>
      <h3>Hero Ids</h3>
      <hr>
      <div class="row">
        <div class="col-sm-2">Heroes:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :hero_ids, @heroes, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class='form-group'>
      <h3>Tile Ids</h3>
      <hr>
      <div class="row">
        <div class="col-sm-2">Leaders:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :tile_ids, @leaders_tile, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Monsters:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :tile_ids, @monsters_tile, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Minions:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :tile_ids, @minions_tile, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Heroes:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :tile_ids, @heroes_tile, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Allies:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :tile_ids, @allies_tile, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class='form-group'>
      <h3>Spell Ids</h3>
      <hr>
      <div class="row">
        <div class="col-sm-2">Spells:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :spell_ids, @spells, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class='form-group'>
      <h3>Items Ids</h3>
      <hr>
      <div class="row">
        <div class="col-sm-2">Weapons:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :item_ids, @weapons, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Armor:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :item_ids, @armors, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Objects:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :item_ids, @objects, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Drinks:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :item_ids, @drinks, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div><br />
      <div class="row">
        <div class="col-sm-2">Specials:</div>
        <div class='col-sm-8'>
          <%= f.collection_check_boxes :item_ids, @specials, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <br /><br />

  <div>
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
<br /><br />
<%= link_to "Back to scenarios", scenarios_path %>
