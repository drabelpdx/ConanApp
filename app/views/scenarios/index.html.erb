<script>
  $(document).ready(function() {
    $('a#show_byorigin').click(function(event){
      event.preventDefault();
      $('div#by_origin').show();
      $('div#by_count').hide();
      $('div#by_map').hide();
    });

    $('a#show_bycount').click(function(event){
      event.preventDefault();
      $('div#by_origin').hide();
      $('div#by_count').show();
      $('div#by_map').hide();
    });

    $('a#show_bymap').click(function(event){
      event.preventDefault();
      $('div#by_origin').hide();
      $('div#by_count').hide();
      $('div#by_map').show();
    });

  });
</script>
