<%= render 'shared/errors', obj: @map %>

<%= form_for @map do |f| %>
  <div class="row">
    <h3>General Info</h3>
    <hr>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class='form-group'>
        <%= f.label :description %><br />
        <%= f.text_field :description %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :flip_side %><br />
        <%= f.text_field :flip_side %>
      </div>
      <div class='form-group'>
        <%= f.label :origin %><br />
        <%= f.text_field :origin %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :image %><br />
        <%= f.text_field :image %>
      </div>
    </div>
  </div>

  <div class="row">
    <h3>Map Specific Rules</h3>
    <hr>
    <div class="col-sm-6 col-md-6">
      <div class='form-group'>
        <%= f.label :ruleone %><br />
        <%= f.text_area :ruleone, cols: "30", rows: "5" %>
      </div>
      <div class='form-group'>
        <%= f.label :ruletwo %><br />
        <%= f.text_area :ruletwo, cols: "30", rows: "5" %>
      </div>
      <div class='form-group'>
        <%= f.label :rulethree %><br />
        <%= f.text_area :rulethree, cols: "30", rows: "5" %>
      </div>
    </div>
    <div class="col-sm-6 col-md-6">
      <div class='form-group'>
        <%= f.label :rulefour %><br />
        <%= f.text_area :rulefour, cols: "30", rows: "5" %>
      </div>
      <div class='form-group'>
        <%= f.label :rulefive %><br />
        <%= f.text_area :rulefive, cols: "30", rows: "5" %>
      </div>
      <div class='form-group'>
        <%= f.label :rulesix %><br />
        <%= f.text_area :rulesix, cols: "30", rows: "5" %>
      </div>
    </div>
  </div><br /><br />

  <p>
    <%= f.submit %>
  </p>
  <br /><br />
<% end %>

<%= link_to "Back to maps", maps_path %>
