<%= render 'shared/errors', obj: @map %>

<%= form_for @map do |f| %>
  <div class="row">
    <h3>General Info</h3>
    <hr>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class='form-group'>
        <%= f.label :description %><br />
        <%= f.text_field :description %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :flip_side %><br />
        <%= f.text_field :flip_side %>
      </div>
      <div class='form-group'>
        <%= f.label :origin %><br />
        <%= f.text_field :origin %>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class='form-group'>
        <%= f.label :image %><br />
        <%= f.text_field :image %>
      </div>
    </div>
  </div>

  <div class="row">
    <h3>Map Specific Rules</h3>
    <hr>
    <div class="col-sm-6 col-md-6">
      <div class='form-group'>
        <%= f.label :special_rules %><br />
        <%= f.text_area :special_rules, cols: "80", rows: "10" %>
      </div>

    </div>

  </div><br /><br />

  <p>
    <%= f.submit %>
  </p>
  <br /><br />
<% end %>

<%= link_to "Back to maps", maps_path %>
