<div class="row">
  <div class="col-md-7 maps well" align="center">
    <h2 class="map"><%= @map.name %></h2>
    <%= image_tag "#{@map.image}" %><br /><br />
      <% if @map.flip_side != 'none' %>
        <h4>Shares a board with
          <% map = Map.find_by_name [@map.flip_side] %>
          <%= link_to @map.flip_side, map_path(map) %>
        </h4>
      <% end %>
      <%= link_to "Back to maps", maps_path %>
  </div>
  <div class="col-md-5">
    <h3>Special Rules:</h3>
      <ol>
        <% if @map.ruleone %><li><%= @map.ruleone.html_safe %></li><% end%>
        <% if @map.ruletwo %><li><%= @map.ruletwo.html_safe %></li><% end%>
        <% if @map.rulethree %><li><%= @map.rulethree.html_safe %></li><% end%>
        <% if @map.rulefour %><li><%= @map.rulefour.html_safe %></li><% end%>
        <% if @map.rulefive %><li><%= @map.rulefive.html_safe %></li><% end%>
        <% if @map.rulesix %><li><%= @map.rulesix.html_safe %></li><% end%>
      </ol><br /><br />
    <h4>Used in these Scenarios: </h4>
      <% if @map_scenarios.any? %>
        <% @map_scenarios.each do |scenario| %>
          <p><%= link_to scenario.name, scenario_path(scenario) %></p>
        <% end%>
      <% end %>
  </div>
</div>

<% if logged_in? && current_user.admin? %>
 <div class="row">
   <br /><br />
   <%= link_to 'Edit', edit_map_path(@map) %> |
   <%= link_to 'Delete', map_path(@map), method: :delete, data: {confirm: "Are you sure?"} %>
 </div>
<% end %>
